class Solution {
    public int lengthOfLongestSubstring(String s) {
        int last = 0;
        int maxlen = 0;
        int n = s.length();
        
        HashMap<Character, Integer> map = new HashMap<>();
        for(int i=0; i<n; i++){
            char ch = s.charAt(i);
            if(map.containsKey(ch)){
                last = Math.max(last, map.get(ch) + 1);
            }
            
            map.put(ch, i);
            maxlen = Math.max(maxlen, i - last + 1);
        }
        return maxlen;
    }
}
